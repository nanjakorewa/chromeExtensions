{
  "manifest_version": 3,
  "name": "X不快なコンテンツブロッカー",
  "version": "1.2.0",
  "description": "YouTubeとTwitter/Xで不快なコンテンツを非表示にし、指定したキーワードを含むツイートをミュートします。",
  "icons": { "128": "icon128.png" },
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://m.youtube.com/*",
        "*://twitter.com/*",
        "*://x.com/*",
        "*://mobile.twitter.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ]
}
